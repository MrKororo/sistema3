<p id="notice"><%= notice %></p>

<h1>Listando Asignaciones Familiar</h1>

<table>
  <thead>
    <tr>
      <th>Tramo</th>
      <th>Monto</th>
      <th>Requisito minimo</th>
      <th>Requisito maximo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @asignacion_familiars.each do |asignacion_familiar| %>
      <tr>
        <td><%= asignacion_familiar.tramo %></td>
        <td>$<%= number_to_currency(asignacion_familiar.monto,strip_insignificant_zeros: true, :unit => "") %></td>
        <td>$<%= number_to_currency(asignacion_familiar.requisitoMinimo,strip_insignificant_zeros: true, :unit => "") %></td>
        <td>$<%= number_to_currency(asignacion_familiar.requisitoMaximo,strip_insignificant_zeros: true, :unit => "") %></td>
        <td><%= link_to 'Ver', asignacion_familiar %></td>
        <td><%= link_to 'Editar', edit_asignacion_familiar_path(asignacion_familiar) %></td>
        <td><%= link_to 'Eliminar', asignacion_familiar, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

