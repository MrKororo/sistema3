<p id="notice"><%= notice %></p>

<h1>Listando Certificados</h1>
<%= form_tag(certificates_path, :method => "get", id: "search-form") do %>
<%= text_field_tag :search, params[:search], placeholder: "Search Certificates" %>
<%= submit_tag "Search" %>
<% end %>
<table>
  <%if @certificates.nil?%>
    <p>No encontrado los datos que requiere</p>
  <%else%>
  <thead>
    <tr>
      <th>Personal</th>
      <th>Motivo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @certificates.each do |certificate| %>
      <tr>
        <td><%= certificate.personal.nombre_apellido %></td>
        <td><%= certificate.motivo %></td>
        <td><%= link_to 'Ver', certificate %></td>
        <td><%= link_to 'Editar', edit_certificate_path(certificate) %></td>
        <%if current_user%>
        <td><%= link_to 'Eliminar', certificate, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
  <%end%>
</table>

<br>
<% if current_user %>
<%= link_to 'Nuevo Certificado', new_certificate_path %>
<%end%>
