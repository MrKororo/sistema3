<p id="notice"><%= notice %></p>

<h3>Listando Sindicatos</h3>

<table>
  <thead>
    <tr>
      <th>Nombre sindicato</th>
      <th>Cuota sindical</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sindicatos.each do |sindicato| %>
      <tr>
        <td><%= sindicato.nombre_sindicato %></td>
        <td>$<%= number_to_currency(sindicato.cuota_sindical,strip_insignificant_zeros: true, :unit => "") %></td>
        <td><%= link_to 'Ver', sindicato %></td>
        <td><%= link_to 'Editar', edit_sindicato_path(sindicato) %></td>
        <td><%= link_to 'Eliminar', sindicato, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

