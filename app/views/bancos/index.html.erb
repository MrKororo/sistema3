<h3>Listando Bancos</h3>

<table>
  <thead>
    <tr>
      <th>Banco</th>
      <th>Tipo cuenta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bancos.each do |banco| %>
      <tr>
        <td><%= banco.banco %></td>
        <td><%= banco.tipo_cuenta %></td>
        <td><%= link_to 'Ver', banco %></td>
        <td><%= link_to 'Editar', edit_banco_path(banco) %></td>
        <td><%= link_to 'Eliminar', banco, method: :delete, data: { confirm: 'Â¿Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

