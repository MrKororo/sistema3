    <%if @liquidacion.descuento_adicional !=nil%>
      <strong>Descuento adicional:</strong>
      $<%= number_to_currency(@liquidacion.descuento_adicional.descuento_adicional,strip_insignificant_zeros: true, :unit => "") %>
    <%end%>
    </p>



  </td>

  <td>
    <p>
      <strong>Porcentaje afp:</strong>
      <%= @liquidacion.porcentaje_afp %>%
