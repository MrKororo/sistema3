<p id="notice"><%= notice %></p>

<table>
  <td>
    <p>
      <strong>Trabajador:</strong>
      <%= @liquidacion.personal.nombre_apellido %>
    </p>

    <p>
      <strong>Sueldo base:</strong>
      $<%= number_to_currency(@liquidacion.habere.valor_hora,strip_insignificant_zeros: true, :unit => "") %>
    </p>

    <p>
      <strong>Horas trabajadas:</strong>
      <%= @liquidacion.horas_trabajadas %>
    </p>

    <p>
      <strong>Remuneracion:</strong>
      $<%= number_to_currency(@liquidacion.remuneracion,strip_insignificant_zeros: true, :unit => "") %>
    </p>
    <p>
      <strong>Cantidad horas extra:</strong>
      <%= @liquidacion.cantidad_horas_extra %>
    </p>

    <p>
      <strong>Horas extra:</strong>
      $<%= number_to_currency(@liquidacion.horas_extra,strip_insignificant_zeros: true, :unit => "") %>
    </p>

    <p>
    <%if @liquidacion.asignacion.asignacion != nil%>
      <strong>Asignacion:</strong>
      $<%= number_to_currency(@liquidacion.asignacion.asignacion,strip_insignificant_zeros: true, :unit => "") %>
    <%end%>
    </p>

    <p>
    <%if @liquidacion.bonificacion.bono != nil%>
      <strong>Bonificacion:</strong>
      $<%= number_to_currency(@liquidacion.bonificacion.bono,strip_insignificant_zeros: true, :unit => "") %>
    <%end%>
    </p>

    <p>
      <strong>Vacaciones:</strong>
      $<%= number_to_currency(@liquidacion.vacaciones,strip_insignificant_zeros: true, :unit => "") %>
