              <li><a href="/liquidacions">Liquidaciones</a></li>
              <li><a href="/certificates">Certificados</a></li>
              <li><a class="button" href="/logout">Salir</a></li>
              <li> &nbsp Ha ingresado como: <br/>&nbsp <%= current_user.nombre %>.</li>
            <%end%>
          </ul>
        </div>
      </div>
    </div>
 
  
  <!-- /Navigation -->  
   <div class="row" id="content">
      <div class="medium-9 columns">
        <%= yield %>   
